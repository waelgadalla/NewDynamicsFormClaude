@page "/Error"
@using System.Diagnostics

<PageTitle>Error</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill"></i> An error occurred
                </h4>
                <hr />
                <p class="mb-0">
                    An unexpected error has occurred while processing your request.
                </p>
                @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
                {
                    <hr />
                    <p class="mb-0">
                        <strong>Request ID:</strong> <code>@Activity.Current?.Id ?? HttpContext.TraceIdentifier</code>
                    </p>
                }
            </div>
            <div class="mt-3">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house-door"></i> Return to Home
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }
}
