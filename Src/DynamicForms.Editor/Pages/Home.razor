@page "/"

<PageTitle>Home - Dynamic Forms Editor</PageTitle>

<h1>Welcome to Dynamic Forms Editor</h1>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-pencil-square text-primary"></i> Form Editor
                </h5>
                <p class="card-text">
                    Create and edit dynamic forms with an intuitive visual editor.
                    Add fields, configure validation, and design your forms.
                </p>
                <a href="/editor" class="btn btn-primary">Open Editor</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-list-ul text-success"></i> Modules
                </h5>
                <p class="card-text">
                    View and manage all form modules. Edit drafts, view history,
                    and publish to production.
                </p>
                <a href="/modules" class="btn btn-success">View Modules</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-cloud-check text-info"></i> Published Forms
                </h5>
                <p class="card-text">
                    View all published forms that are live in production.
                    Check version history and manage active versions.
                </p>
                <a href="/published" class="btn btn-info">View Published</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-clock-history text-warning"></i> History
                </h5>
                <p class="card-text">
                    Review change history and audit trails for all form modifications.
                    Track who changed what and when.
                </p>
                <a href="/history" class="btn btn-warning">View History</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h3>Quick Stats</h3>
    <div class="row">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-value">0</div>
                <div class="stat-label">Draft Modules</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-value">0</div>
                <div class="stat-label">Published Forms</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-value">0</div>
                <div class="stat-label">Total Fields</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-value">0</div>
                <div class="stat-label">History Entries</div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        text-align: center;
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: bold;
        color: #0066cc;
    }

    .stat-label {
        font-size: 0.9rem;
        color: #666;
        margin-top: 0.5rem;
    }

    .card {
        margin-bottom: 1rem;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>
